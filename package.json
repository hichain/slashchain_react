{
  "name": "hichain_web_app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start:client": "react-app-rewired start",
    "serve:server": "node ./dist/server/index.js",
    "serve:client": "serve -s ./build",
    "build": "npm-run-all -p build:*",
    "build:client": "react-app-rewired build",
    "build:server": "tsc --project ./src/server",
    "eject": "react-scripts eject",
    "lint": "eslint './src/**/*.{ts,tsx}'",
    "test": "jest --passWithNoTests",
    "prepare": "husky install",
    "lint-staged": "lint-staged"
  },
  "engines": {
    "node": "15.x"
  },
  "dependencies": {
    "@testing-library/jest-dom": "^5.11.9",
    "@types/node": "^14.14.31",
    "@types/react": "^17.0.2",
    "@types/react-dom": "^17.0.1",
    "@types/styled-components": "^5.1.9",
    "boardgame.io": "0.43.3",
    "node-sass": "^5.0.0",
    "npm-run-all": "^4.1.5",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-scripts": "^4.0.3",
    "styled-components": "^5.2.2",
    "typescript": "~4.1"
  },
  "devDependencies": {
    "@types/jest": "^26.0.20",
    "@types/koa-router": "^7.4.1",
    "@types/koa-static": "^4.0.1",
    "@types/react-router": "^5.1.11",
    "@types/react-router-dom": "^5.1.7",
    "@types/socket.io": "^2.1.13",
    "@typescript-eslint/eslint-plugin": "^4.15.2",
    "@typescript-eslint/parser": "^4.15.2",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-jest": "^24.1.5",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "husky": "^5.1.1",
    "koa-static": "^5.0.0",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "react-app-rewired": "^2.1.8",
    "react-router": "^5.2.0",
    "react-router-dom": "^5.2.0",
    "serve": "^11.3.2",
    "ts-jest": "^26.5.2"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/*.test.ts"
    ]
  },
  "lint-staged": {
    "*.{js, ts, jsx, tsx}": "eslint --fix"
  }
}
