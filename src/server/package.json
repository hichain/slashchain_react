{
  "name": "hichain_web_app_server",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start:master": "node ./dist/master_server.js",
    "start:koa": "node ./dist/koa_server.js",
    "build": "tsc",
    "test": "jest --passWithNoTests"
  },
  "dependencies": {
    "@types/koa-router": "^7.4.1",
    "@types/koa-static": "^4.0.1",
